<header class="intro-header" style="background-image: url(/assets/tech_conference_audience.png)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Events</h1>
                    <hr class="small">
                    <span class="subheading">Discover our meetups and join us!</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

    <p id="notice"><%= notice %></p>




    <% @events.each do |event| %>

    <div class="post-preview">
                <%= link_to event do %>
                    <h2 class="post-title">
                        <%= event.title %>
                         <small><%= event.subtitle %></small>
                    </h2>
                    <h4 class="post-subtitle">
                        <%= event.description %>
                    </h4>
                <% end %>
                <p class="post-meta text-right">
                  <small>
                    <span class="label label-info"><i class="fa fa-calendar"></i> <%= event.start.strftime("%a %d %b") %></span>
                    <span class="label label-info"><i class="fa fa-clock-o"></i> <%= event.start.strftime("%H") %>-<%= event.end.strftime("%H") %></span>
                    <span class="label label-info"><i class="fa fa-map-marker"></i> <%= event.place %></span>
                    
                    
                  </small>
                </p>
            </div>
            <hr>






        <!--<td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
     
    <% end %>


<%= link_to 'Create a new event', new_event_path, class: "btn btn-default pull-right" %>

    </div>
  </div>
</div>

