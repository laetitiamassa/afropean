<header class="intro-header" style="background-image: url(/assets/afropean_news2.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>News</h1>
                    <hr class="small">
                    <span class="subheading">The Afropean project pulse</span>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

    <p id="notice"><%= notice %></p>




    <% @articles.each do |article| %>

    <div class="post-preview">
                <%= link_to article do %>
                    <h2 class="post-title">
                        <%= article.title %>
                         <br><small><%= article.subtitle %></small>
                    </h2>
                    <h4 class="post-subtitle">
                        <%= article.content %>
                    </h4>
                <% end %>
                
            </div>
            <hr>

     
    <% end %>


<%= link_to 'Write a new article', new_article_path, class: "btn btn-default pull-right" %>

    </div>
  </div>
</div>



